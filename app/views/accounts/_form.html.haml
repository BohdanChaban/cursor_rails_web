= form_for(@account) do |f|
  - if @account.errors.any?
    #error_explanation
      %h2
        = error_messages_for(@account)

  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :age
    %br/
    = f.number_field :age
  .actions
    = f.submit Account.human_attribute_name('create_account')