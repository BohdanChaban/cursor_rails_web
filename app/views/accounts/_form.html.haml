.all_file
  = form_for @account, :html => {:class => 'form-horizontal center'}  do |f|
    - if @account.errors.any?
      #error_explanation
        %h2
          = error_messages_for(@account)

    .form-group
      = f.label :name, class: 'col-md-4 control-label'
      .col-md-7
        = f.text_field :name, class: 'form-control'
    .form-group
      = f.label :age, class: 'col-md-4 control-label'
      .col-md-7
        = f.number_field :age, class: 'form-control'
    .submit_button
      = f.submit Account.human_attribute_name('create_account'), class: 'btn btn-default btn-success'