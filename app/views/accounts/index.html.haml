.all_file
  %p{ :id => 'notice'}
    = notice

  %h1= Account.human_attribute_name('listing_accounts')

  %table.table.table-hover.my_table
    %thead
      %tr
        %th= Account.human_attribute_name('name')
        %th= Account.human_attribute_name('age')
        %th{ :colspan =>'3'}
    %tbody
      - sure_alert = I18n.t 'sure'
      - @accounts.each do |account|
        %tr
          %td= account.name
          %td= account.age
          %td= link_to Account.human_attribute_name('show'), account, class: "btn btn-default btn-success"
          %td= link_to Account.human_attribute_name('edit'), edit_account_path(account), class: "btn btn-default btn-success"
          %td= link_to Account.human_attribute_name('destroy'), account, method: :delete, data: { confirm: sure_alert }, class: "btn btn-default btn-success"
  %br/
  .links
    = link_to Account.human_attribute_name('new_account'), new_account_path, class: "btn btn-default btn-success"
