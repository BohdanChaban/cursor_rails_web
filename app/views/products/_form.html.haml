.input_block
  = form_for @product, :html => {:class => "form-horizontal center"} do |f|
    .form-group
      = f.label :name, "Name:", class: "col-md-4 control-label"
      .col-md-8
        = f.text_field :name, class: "form-control"
    .form-group
      = f.label :description, "Description:", class: "col-md-4 control-label"
      .col-md-8
        = f.text_field :description, class: "form-control"
    .form-group
      = f.label :price, "Price:", class: "col-md-4 control-label"
      .col-md-8
        = f.text_field :price, class: "form-control"
    .submit_button
      = f.submit "Create product", class: "btn btn-default btn-success"

