<div class="all_file">
  <h1>Your cart</h1>

  <h2>Selected products</h2>

  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <!--<th colspan="3"></th>-->
    </tr>
    </thead>

    <tbody>
    <%- @products_in_cart.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br/>
  <div class="links">
    <%= link_to 'Go to products list', products_path %>
  </div>
</div>