.all_file
  %h1.header1= Cart.human_attribute_name('your_cart')
  %table.table.table-hover.my_table
    %thead
      %tr
        %th= Cart.human_attribute_name('name')
        %th= Cart.human_attribute_name('description')
        %th= Cart.human_attribute_name('price')
    %tbody
      - @products_in_cart.each do |product|
        %tr
          %td= product.name
          %td= product.description
          %td= product.price
  %br
  .links
    = link_to Cart.human_attribute_name('products_list'), products_path
